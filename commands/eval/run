const { NodeVM } = require('vm2')
const { inspect } = require('util')

process.on('message', async ({ args, flags, ctx }) => {

    const vm = new NodeVM({
        timeout: 1000,
        sandbox: ctx,
        eval: false,
        require: {
            external: {
                modules: ['node-fetch'],
            }
        }
    })

    let evaled

    try {
        evaled = await vm.run(`module.exports = (async () => {
            ${ flags.r ? 'return' : '' } ${args}
        })()`, __filename)
    } catch (e) {
        evaled = e
    }

    if(typeof evaled != 'string') evaled = inspect(evaled, { depth: 0 })

    process.send(evaled)
})